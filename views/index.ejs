<html>
<head> 
</head>
<body>
    <%- include('./partials/nav.ejs')  %>
    <%- include('./partials/head.ejs')  %>
    <%- include('./partials/footer.ejs')  %>
</body>
    <div id="blogs content">
    <h2>All blogs</h2>
</div>
    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a class="single" href="/blogs/<%= blog._id %>">
        <h3 class="title"><%= blog.title %></h3>
        <p class="snippets"><%= blog.snippet %></p>
        </a>
        <% }) %>
    <% }  else { %>
        <p>There are no blogs to display...<br>
           Try creating a new Blog<br>
           To do so, tap on New blog</p>
    <% } %>

    <%- include('./partials/footer.ejs') %>
</body>
</html>
